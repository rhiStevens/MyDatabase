<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ishpa.mydatabase.HomeScreen"
    android:id="@+id/layout_home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Movie Bucket List!"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.225"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now you can have them all in one place!"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/about"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Add a movie"
        android:textStyle="italic"
        android:fontFamily="casual"
        android:background="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/addMovie"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:onClick="addMovieButtonClicked"
        app:layout_constraintVertical_bias="0.175" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Change Background Color"
        android:background="@color/colorAccent"
        android:textStyle="italic"
        android:fontFamily="casual"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addMovie"
        android:onClick="onClick"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/about_page" />

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/about_page"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:text="About"
        android:background="@color/colorAccent"
        android:textStyle="italic"
        android:fontFamily="casual"
        android:onClick="aboutMovieButtonClicked"/>
</android.support.constraint.ConstraintLayout>
